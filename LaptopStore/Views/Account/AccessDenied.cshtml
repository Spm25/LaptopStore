@{
    ViewData["Title"] = "Không có quyền truy cập";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">⛔ Truy cập bị từ chối</h1>
    <p class="lead">Bạn không có quyền truy cập trang này.</p>
    <a href="/" class="btn btn-primary mt-3">Đăng nhập</a>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Quay lại trang chủ</a>
    }
</div>
