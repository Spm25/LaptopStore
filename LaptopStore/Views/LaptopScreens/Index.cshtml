@model IEnumerable<LaptopStore.Models.LaptopScreen>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScreenType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsedStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repaired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScreenType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsedStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repaired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ScreenID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScreenID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ScreenID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
