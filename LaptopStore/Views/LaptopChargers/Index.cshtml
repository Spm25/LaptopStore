@model IEnumerable<LaptopStore.Models.LaptopCharger>

@{
    ViewData["Title"] = "Danh sách sạc laptop";
}

<h1>Danh sách sạc laptop</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm sạc mới</a>
</p>

<table id="laptopChargersTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Công suất (W)</th>
            <th>Loại cổng</th>
            <th>Số lượng</th>
            <th>Chất lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Wattage W</td>
                    <td>@item.Connector</td>
                    <td>@item.Quantity</td>
                    <td>@item.Quality</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ChargerID" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.ChargerID" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.ChargerID" class="btn btn-sm btn-danger">Xoá</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
            $("#laptopChargersTable").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "language": {
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "previous": "Trước",
                        "next": "Sau"
                    },
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ sạc laptop",
                    "infoEmpty": "Không có sạc laptop",
                    "zeroRecords": "Không tìm thấy kết quả"
                }
            }).buttons().container().appendTo('#laptopChargersTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}