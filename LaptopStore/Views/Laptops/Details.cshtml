@model LaptopStore.Models.Laptop

@{
    ViewData["Title"] = $"Chi tiết Laptop - {Model.Brand} {Model.Model}";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-laptop"></i>
            Thông tin chi tiết: <strong>@Model.Brand @Model.Model</strong>
        </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-5 text-center">
                @* @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img src="@Model.ImageURL" alt="Ảnh @Model.Brand @Model.Model" class="img-fluid rounded shadow-sm mb-3" style="max-height: 350px; object-fit: contain;" />
                }
                else
                {
                    <div class="img-placeholder mb-3" style="width: 100%; height: 300px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center; border-radius: .25rem; border: 1px solid #dee2e6;">
                        <span class="text-muted">Không có ảnh</span>
                    </div>
                } *@
                <img src="~/image/laptop.png"
                     alt=" Không có ảnh"
                     class="img-fluid rounded shadow-sm mb-3"
                     style="max-height: 350px; max-width: 100%; object-fit: contain;" />

                <h4 class="text-success font-weight-bold">Giá bán: @Model.SellingPrice.ToString("N0") VNĐ</h4>
                <p class="mt-2">
                    @if (Model.IsSold)
                    {
                        <span class="badge badge-danger p-2" style="font-size: 1rem;">Đã bán</span>
                    }
                    else
                    {
                        <span class="badge badge-success p-2" style="font-size: 1rem;">Còn hàng</span>
                    }
                </p>
            </div>

            <div class="col-md-7">
                <h4><i class="fas fa-info-circle text-info"></i> Thông tin cơ bản</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Hãng sản xuất</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Brand)</dd>

                    <dt class="col-sm-4">Model</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Model)</dd>

                    <dt class="col-sm-4">Số Serial</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.SerialNumber)</dd>
                </dl>

                <h4 class="mt-4"><i class="fas fa-cogs text-primary"></i> Thông số kỹ thuật</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">CPU</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.CPU)</dd>

                    <dt class="col-sm-4">RAM</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.RAM)</dd>

                    <dt class="col-sm-4">Ổ cứng</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.Storage)</dd>

                    <dt class="col-sm-4">Card đồ họa (GPU)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.GPU)</dd>

                    <dt class="col-sm-4">Kích thước màn hình</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.ScreenSize) inch</dd>

                    <dt class="col-sm-4">Hệ điều hành</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.OperatingSystem)</dd>

                    <dt class="col-sm-4">Tình trạng pin</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(m => m.BatteryHealth) %</dd>
                </dl>

                <h4 class="mt-4"><i class="fas fa-dollar-sign text-warning"></i> Giá & Mô tả</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Giá bán</dt>
                    <dd class="col-sm-8">@Model.SellingPrice.ToString("N0") VNĐ</dd>

                    <dt class="col-sm-4">Mô tả chi tiết</dt>
                    <dd class="col-sm-8">@Html.Raw(Model.Description?.Replace("\n", "<br />"))</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Edit" asp-route-id="@Model.LaptopID" class="btn btn-warning"><i class="fas fa-edit"></i> Sửa</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại Danh sách</a>
    </div>
</div>