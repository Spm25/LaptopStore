@model LaptopStore.Models.Laptop

@{
    ViewData["Title"] = "Chi tiết Laptop";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin Laptop</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tình trạng bán</dt>
            <dd class="col-sm-9">
                @if (Model.IsSold)
                {
                    <span class="badge badge-success">Đã bán</span>
                }
                else
                {
                    <span class="badge badge-warning">Chưa bán</span>
                }
            </dd>

            <dt class="col-sm-3">Hãng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Brand)</dd>

            <dt class="col-sm-3">Model</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Model)</dd>

            <dt class="col-sm-3">Số serial</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.SerialNumber)</dd>

            <dt class="col-sm-3">CPU</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.CPU)</dd>

            <dt class="col-sm-3">RAM</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.RAM)</dd>

            <dt class="col-sm-3">Ổ cứng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Storage)</dd>

            <dt class="col-sm-3">Card đồ họa</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.GPU)</dd>

            <dt class="col-sm-3">Giá nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.ImportPrice)</dd>

            <dt class="col-sm-3">Giá bán</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.SellingPrice)</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Description)</dd>

            <dt class="col-sm-3">Ảnh</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img hr="@Model.ImageURL" alt="Ảnh laptop" style="max-width: 250px;" />
                }
                else
                {
                    <span>Không có ảnh</span>
                }
            </dd>

            <dt class="col-sm-3">Kích thước màn hình (inch)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.ScreenSize)</dd>

            <dt class="col-sm-3">Hệ điều hành</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.OperatingSystem)</dd>

            <dt class="col-sm-3">Tình trạng pin (%)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.BatteryHealth) %</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.LaptopID" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
