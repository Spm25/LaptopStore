@model LaptopStore.Models.Laptop

@{
    ViewData["Title"] = "Thêm mới Laptop";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin Laptop</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Hãng</label>
                    <select asp-for="Brand" class="form-control select2-tag" style="width: 100%;">
                        <option>Dell</option>
                        <option>HP</option>
                        <option>Lenovo</option>
                        <option>Asus</option>
                        <option>Acer</option>
                        <option>MSI</option>
                        <option>Apple</option>
                    </select>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label>Model</label>
                    <input asp-for="Model" class="form-control" placeholder="VD: Inspiron 15" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label>Số serial</label>
                    <input asp-for="SerialNumber" class="form-control" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>CPU</label>
                    <input asp-for="CPU" class="form-control" placeholder="VD: i5-1135G7" />
                    <span asp-validation-for="CPU" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>RAM</label>
                    <select asp-for="RAM" class="form-control select2-tag" style="width: 100%;">
                        <option>4GB</option>
                        <option>8GB</option>
                        <option>12GB</option>
                        <option>16GB</option>
                        <option>32GB</option>
                    </select>
                    <span asp-validation-for="RAM" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>Ổ cứng</label>
                    <select asp-for="Storage" class="form-control select2-tag" style="width: 100%;">
                        <option>128GB SSD</option>
                        <option>256GB SSD</option>
                        <option>512GB SSD</option>
                        <option>1TB HDD</option>
                        <option>1TB SSD</option>
                    </select>
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>Card đồ họa</label>
                    <input asp-for="GPU" class="form-control" placeholder="VD: Intel Iris Xe" />
                    <span asp-validation-for="GPU" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Màn hình</label>
                    <select asp-for="ScreenSize" class="form-control select2-tag" style="width: 100%;">
                        <option>11.6</option>
                        <option>13.3</option>
                        <option>14</option>
                        <option>15.6</option>
                        <option>17.3</option>
                    </select>
                    <span asp-validation-for="ScreenSize" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>Hệ điều hành</label>
                    <select asp-for="OperatingSystem" class="form-control select2-tag" style="width: 100%;">
                        <option>Windows 10</option>
                        <option>Windows 11</option>
                        <option>Linux</option>
                        <option>MacOS</option>
                        <option>FreeDOS</option>
                    </select>
                    <span asp-validation-for="OperatingSystem" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>Pin</label>
                    <input asp-for="BatteryHealth" class="form-control" placeholder="VD: 85%" />
                    <span asp-validation-for="BatteryHealth" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label>Hình ảnh</label>
                    <input asp-for="ImageURL" class="form-control" placeholder="URL ảnh..." />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mt-3">
                <div class="form-group col-md-6">
                    <label>Giá nhập</label>
                    <input asp-for="ImportPrice" class="form-control" />
                    <span asp-validation-for="ImportPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label>Giá bán</label>
                    <input asp-for="SellingPrice" class="form-control" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label>Mô tả thêm</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả chi tiết (nếu có)..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer text-right">
            <input type="submit" value="Thêm mới" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.select2-tag').select2({
                tags: true,
                placeholder: "Nhập hoặc chọn",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
