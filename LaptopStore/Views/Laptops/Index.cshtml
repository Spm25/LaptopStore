@model IEnumerable<LaptopStore.Models.Laptop>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Laptop</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Thông tin máy</th>
            <th>Serial Number</th>
            <th>Giá nhập</th>
            <th>Giá bán</th>
            <th>Mô tả</th>
            <th>Ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>
                        <strong>Hãng:</strong> @item.Brand <br />
                        <strong>Model:</strong> @item.Model <br />
                        <strong>CPU:</strong> @item.CPU <br />
                        <strong>RAM:</strong> @item.RAM <br />
                        <strong>Ổ cứng:</strong> @item.Storage <br />
                        <strong>GPU:</strong> @item.GPU <br />
                        <strong>HĐH:</strong> @item.OperatingSystem <br />
                        <strong>Màn hình:</strong> @item.ScreenSize <br />
                        <strong>Pin:</strong> @item.BatteryHealth
                    </td>
                    <td>@item.SerialNumber</td>
                    <td>@item.ImportPrice.ToString("N0") đ</td>
                    <td>@item.SellingPrice.ToString("N0") đ</td>
                    <td>@item.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageURL))
                        {
                            <img src="@item.ImageURL" alt="Laptop Image" style="max-width: 100px;" />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LaptopID" class="btn btn-sm btn-warning">Sửa</a><br />
                        <a asp-action="Details" asp-route-id="@item.LaptopID" class="btn btn-sm btn-info">Chi tiết</a><br />
                        <a asp-action="Delete" asp-route-id="@item.LaptopID" class="btn btn-sm btn-danger">Xoá</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>
